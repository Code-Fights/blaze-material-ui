                    role="checkbox"
                    aria-pressed=pressed.get
                    tabindex="0"
                    aria-disabled=disabled.get
                    toggles=""
                    focused=focused.get
                    pressed=pressed.get
                    disabled=disabled.get
                    checked=checked.get)
  div(data-id="toggleContainer" class="paper-toggle-button")
    div(data-id="toggleBar" class="toggle-bar paper-toggle-button")
    div(data-id="toggleButton" class="toggle-button paper-toggle-button")
      +PaperRipple(id="ink" className="paper-toggle-button" centered="")