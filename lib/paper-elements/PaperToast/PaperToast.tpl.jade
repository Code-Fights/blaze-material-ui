paper-toast(class=className
            text=text
            aria-hidden="true" active=active.get
            layout horizontal center)
  span(data-id="label" class="paper-toast" flex)
    //- HTML rendering should be removed (keep it for now)
    if text
      | !{text}
    else
      +Template.contentBlock
  if dismissable
    +PaperIconButton(icon="navigation:close" eventHook="close-toast")