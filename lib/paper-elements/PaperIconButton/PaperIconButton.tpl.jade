paper-icon-button(class=className
                  title=title
                  mini=mini
                  pressed=pressed.get
                  focused=focused.get
                  active=active.get
                  disabled=disabled
                  icon=icon
                  aria-label=title
                  tabindex='0'
                  role="button"
                  event-hook=eventHook)
  +PaperRipple(fit='' id="ink" className="circle paper-icon-button" centered="")
  if icon
    +IronIcon(label=title icon=icon id="icon")
  else
    +Template.contentBlock
